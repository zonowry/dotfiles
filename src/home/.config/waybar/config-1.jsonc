  "position": "top",
  "height": 41,
  "margin-top": 0,
  "margin-bottom": 0,
  "margin-left": 0,
  "margin-right": 0,
  "modules-left": ["custom/launcher", "hyprland/workspaces", "mpris"],
  "modules-center": ["wlr/taskbar"],
  "modules-right": ["tray", "wireplumber", "network", "cpu", "memory", "clock"],

